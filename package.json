{
  "name": "planv7",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@planv7/testing": "workspace:packages/testing",
    "jest": "^25.0.0",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "yarn workspaces foreach --parallel run lint",
    "test": "jest --silent",
    "start:dev": "webpack --env=dev",
    "build:prod": "yarn workspaces foreach --parallel run build:prod",
    "deploy:stack": "yarn workspace @planv7/infrastructure deploy"
  },
  "config": {
    "mongoDbMemoryServer": {
      "downloadDir": "node_modules/.cache/mongodb-memory-server/mongodb-binaries"
    }
  }
}
