{
  "name": "@planv7/testing",
  "dependencies": {
    "@planv7/eslint-config-planv7": "workspace:packages/eslint-config-planv7",
    "cypress": "^4.5.0",
    "eslint": "^7.0.0",
    "inversify": "^5.0.1",
    "jest-junit": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.10.1"
  },
  "scripts": {
    "wait": "ts-node src/cypress/wait.ts http://localhost/app",
    "run:app": "USE_MONGO_MEMORY_SERVER=yes ASSETS_DIR=$PWD/../frontend/dist/assets yarn workspace @planv7/backend start",
    "test:cypress": "yarn wait && cypress run",
    "lint": "eslint '**/*.{ts,tsx,js,jsx,d.ts}'",
    "lint:fix": "eslint --fix '**/*.{ts,tsx,js,jsx,d.ts}'"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "latest"
    }
  },
  "eslintConfig": {
    "extends": [
      "@planv7/eslint-config-planv7"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "devDependencies": {
    "@types/eslint": "6.8.0"
  }
}
